{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "ESNext",
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
